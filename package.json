{
  "name": "tusk-bun",
  "version": "1.0.0",
  "description": "Developer journal and standup tool - persistent memory for AI agents",
  "main": "index.ts",
  "type": "module",
  "bin": {
    "tusk-bun": "./index.ts",
    "tusk": "./cli.ts"
  },
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun --watch index.ts",
    "checkpoint": "bun run cli.ts checkpoint",
    "recall": "bun run cli.ts recall",
    "standup": "bun run cli.ts standup",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:unit": "bun test tests/*.test.ts --exclude tests/integration.test.ts",
    "test:integration": "bun test tests/integration.test.ts",
    "test:coverage": "bun test --coverage",
    "test:ci": "bun test --reporter json --timeout 60000",
    "test:debug": "bun test --verbose --bail",
    "test:clean": "rm -rf coverage/ test-results/ && echo 'Test artifacts cleaned'",
    "validate": "bun run test:coverage && bun run type-check",
    "type-check": "tsc --noEmit",
    "migrate": "bun run migrate.ts"
  },
  "keywords": ["mcp", "journal", "standup", "developer", "memory"],
  "author": "Murphy Randle",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "zod": "^4.1.11"
  }
}
